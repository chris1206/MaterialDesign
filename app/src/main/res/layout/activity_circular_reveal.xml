<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_circular_reveal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.minicup.materialdesign.MaterialDesign.CircularRevealActivity">


    <ImageView
        android:id="@+id/view1"
        android:onClick="view1Clicked"
        android:src="@mipmap/meinv"
        android:background="@drawable/circle_bg_accent"
        android:layout_width="200dp"
        android:scaleType="centerCrop"
        android:layout_height="200dp" />


    <ImageView
        android:id="@+id/view2"
        android:visibility="invisible"
        android:onClick="view2Clicked"
        android:src="@mipmap/meinv"
        android:scaleType="centerCrop"
        android:layout_below="@+id/view1"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</RelativeLayout>
